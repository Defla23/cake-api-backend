{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "k6", "jest"]
  },
  "include": ["src/**/*", "__tests__/**/*", "load.tests/**/*", "performanceTesting"],
  "exclude": ["node_modules"]
}
